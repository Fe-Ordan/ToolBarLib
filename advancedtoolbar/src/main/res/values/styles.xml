<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaterialSection">
        <attr name="sectionColorIcon" format="color" />
        <attr name="sectionColorText" format="color" />
        <attr name="sectionColorNotification" format="color" />
        <attr name="sectionBackgroundColorPressed" format="color" />
        <attr name="sectionBackgroundColorSelected" format="color" />
        <attr name="sectionBackgroundColor" format="color" />
        <attr name="sectionRippleColor" format="color" />
        <attr name="section_item_layout" format="reference" />
    </declare-styleable>

    <declare-styleable name="MainThemeActionBarBuilder">
        <attr name="iOSSearchBarStyle" format="reference" />
        <attr name="iOSActionBarCompanyLogo" format="reference" />
        <attr name="iOSSearchBarLayout" format="reference" />
        <attr name="iOSCustomBarTitleLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="SearchBarStyle">
        <attr name="search_bar_hint_color" format="color" />
        <attr name="search_bar_close_btn_color" format="color" />
        <!--    <attr name="search_bar_hint_txt" format="string" />-->
    </declare-styleable>


    <style name="searchimage" parent="android:style/Widget.Holo.ActionButton">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
    </style>

    <style name="actionButtonhkm" parent="android:style/Widget.Holo.ActionButton">
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@mipmap/ic_action_find</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="actionButtonCompact40" parent="actionButtonhkm">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/icon_lft_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/ic_action_close</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="actionButtonCompact30" parent="actionButtonhkm">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">@dimen/icon_lft_width</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/ic_action_close</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="actionButtonNoPadding" parent="android:style/Widget.Holo.ActionButton">
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/ic_action_find</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="beastbarSteup">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="paddingStart">0dp</item>
        <item name="paddingEnd">0dp</item>
    </style>
</resources>